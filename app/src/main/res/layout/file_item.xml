<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <ImageView
        android:layout_width="@dimen/file_browser_thumbnail_image_size"
        android:layout_height="@dimen/file_browser_thumbnail_image_size"
        android:layout_margin="@dimen/file_browser_vertical_margin_item"
        android:layout_centerVertical="true"
        android:id="@+id/imageView"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/file_browser_vertical_margin_item"
        android:layout_centerVertical="true"
        android:textSize="@dimen/file_browser_item_text_size"
        android:id="@+id/textView"
        android:layout_toRightOf="@+id/imageView" />
</RelativeLayout>